{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "declaration": false,
        "module": "commonjs",
        "strictNullChecks": true,
        "sourceMap": true,
        "lib": ["es2019","DOM.Iterable", "dom"],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": ["src/**/*", "./typings/*.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
} 